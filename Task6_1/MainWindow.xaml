<Window x:Class="Task6_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task6_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBox x:Name="TextBox" Text="Введите текст здесь"></TextBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="ChkBox" Grid.Column="0" VerticalAlignment="Center"></CheckBox>
            <Label Content="Показать детали" Grid.Column="1" VerticalAlignment="Center"></Label>
        </Grid>
        <StackPanel Visibility="{Binding ElementName=ChkBox, Path=IsChecked, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding ElementName=TextBox, Path=Text.Length, Mode=OneWay, StringFormat='Длина текста: {0}'}"/>
            <ProgressBar x:Name="ProgressBar" Height="15" Margin="5" Maximum="100"
                     Value="{Binding ElementName=TextBox, Path=Text.Length, Mode=OneWay}"></ProgressBar>
        </StackPanel>
    </StackPanel>
</Window>
